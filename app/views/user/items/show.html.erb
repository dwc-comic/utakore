<h1>商品詳細</h1>
<%= attachment_image_tag @item, :image, :fill, 100, 100, format:'jpeg' %>
<p>アーティスト名 : <%= @item.artist_name %></p>
<p>タイトル : <%= @item.title%></p>
<p>収録曲</p>
<% @item.discs.each do |disc| %>
	<p>ディスク : <%= disc.disc_number %></p>
		<% disc.songs.each do |song| %>
			<p><%= song.song_number %>.
			<%= song.song_name %></P>
		<% end %>
<% end %>
<p>価格 : <%= @item.item_price %>円</p>
<p>レーベル : <%= @item.lebel %></p>
<p>ジャンル : <%= @item.genre %></p>
<p>在庫数 : <%= @item.stock %></p>

<% if @item.favorited_by?(current_user) %>
  <li>
    <%= link_to user_favorites_path(@item), method: :delete do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= @item.favorites.count %> いいね
    <% end %>
  </li>
<% else %>
  <li>
    <%= link_to user_favorites_path(@item), method: :post do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= @item.favorites.count %> いいね
    <% end %>
  </li>
<% end %>
