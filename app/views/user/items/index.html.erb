<div class="container">
	<h3 class="item_index">商品一覧</h3>
	<div class="row">
		<div class="col-lg-4"></div>
		<div class="col-lg-4">
			<div class="search">
			    <%= search_form_for @search, url: user_items_path do |f| %>
			        <%= f.search_field :title_or_artist_name_cont, :placeholder => "キーワードを入力", class: "search_form" %>
			        <%= f.submit "検索",class: "search_btn" %>
			    <% end %>
			</div>
		</div>
		<div class="col-lg-4"></div>
	</div>
	<div class="row">
		<% @items.each do |item|%>
		<div class="col-lg-4">
			<p><%= link_to user_item_path(item.id) do %>
				<%= attachment_image_tag item, :image, :fill, 200, 200, format:'jpeg' %>
				<% end %></p>
			<p class="explain_index"><%= item.title %></p>
			<p class="explain_index"><%= item.artist_name %></p>
			<p class="explain_index"><%= item.item_price %>円</p>
		</div>
		<% end %>
	</div>
</div>

<%= paginate @items, class: "paginate" %>
