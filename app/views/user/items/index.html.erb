<div class="col-xs-9">
	<h2>うたコレ　商品一覧</h2>
		<%= search_form_for @search, url: user_items_path do |f| %>
	        <%= f.label :title_or_artist_name_cont, "検索" %>
	        <%= f.search_field :title_or_artist_name_cont %>
	        <%= f.submit "検索" %>
	    <% end %>
		<table class="table table-hover table-inverse">
			<tbody>
				<thred>
					<tr>
						<th></th>
						<th>タイトル</th>
						<th>アーティスト名</th>
						<th>価格</th>
					</tr>
					<% @items.each do |item|%>
					<tr>
						<th><%= attachment_image_tag item, :image, :fill, 100,100, format: 'jpeg' %></th>
						<th><%= link_to item.title, user_item_path(item.id) %></th>
						<th><%= item.artist_name %></th>
						<th><%= item.item_price %></th>
					</tr>
					<% end %>
				</thred>
			</tbody>
		</table>
</div>
<%= paginate @items, class: "paginate" %>
