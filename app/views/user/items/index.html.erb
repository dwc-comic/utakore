<h1>User::Items#index</h1>
<p>Find me in app/views/user/items/index.html.erb</p>

<div class="col-xs-9">
	<h2>うたコレ　商品一覧</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<thred>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Price</th>
					</tr>
					<% @items.each do |item|%>
					<tr>
						<th><%= attachment_image_tag item, :image, :fill, 100,100, format: 'jpeg' %></th>
						<th><%= link_to item.title, user_item_path(item.id) %></th>
						<th><%= item.item_price%></th>
					</tr>
					<% end %>
				</thred>
			</tbody>
		</table>
</div>
