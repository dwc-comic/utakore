	                        <p><%=(cart_item.cart_quantity) %></p>

	                        <%= link_to  user_cart_item_path(cart_item.id), method: :delete do %>
	                        	カートから削除
　　　　　　　　　　　　　　　　<% end %>
						   <% end %>
						   総計：<%= (@cart.total_price(@cart)).to_i %>円
