<div class="nested-fields well well-compact">
  <div class="form-group">
    <%= f.label :disc_number %>
    <%= f.number_field :disc_number %><br>
    <%= link_to_remove_association "remove disc", f %>
  </div>

  <div class="items">
    <%= f.fields_for :songs do |song| %>
      <%= render 'song_fields', f: song %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "add song", f, :songs %>
    </div>
  </div>
</div>
