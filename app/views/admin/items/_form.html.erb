<head>
  <meta charset="utf-8">
  <!-- BootstrapのCSS読み込み -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!-- jQuery読み込み -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <!-- BootstrapのJS読み込み -->
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<div class="row">
  <div class="col-sm-2">col-sm-2</div>
  <div class="col-sm-8">
    <%= form_for @item, url: admin_items_path do |f| %>
      <div class="field">
        <%= f.label :image, "ジャケット写真" %>
        <%= f.attachment_field :image %>
      </div>
      <div class="field">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :artist_name, "アーティスト名" %>
        <%= f.text_field :artist_name %>
      </div>
      <div class="field">
        <%= f.label :lebel, "レーベル名" %>
        <%= f.text_field :lebel %>
      </div>
      <div class="field">
        <%= f.label :genre, "ジャンル名" %>
        <%= f.text_field :genre %>
      </div>
      <div class="field">
        <%= f.label :item_price, "値段" %>
        <%= f.text_field :item_price %>
      </div>
      <div class="field">
        <%= f.label :stock, "在庫数" %>
        <%= f.text_field :stock %>
      </div>
      <div id="discs">
        <%= f.fields_for :discs do |disc| %>
          <%= render 'disc_fields', f: disc %>
        <% end %>
        <div id="links">

          <%= link_to_add_association 'ディスクを追加',f, :discs %>
        </div>
        <%= f.submit %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-2">col-sm-2</div>
</div>