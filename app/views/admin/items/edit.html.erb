<h1>登録商品編集</h1>
  <%= form_for @item, url: admin_item_path(@item.id) do |f| %>
  <div class="field">
    <%= f.label :image, "ジャケット写真" %>
    <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist_name, "アーティスト名" %>
    <%= f.text_field :artist_name %>
  </div>
  <div class="field">
    <%= f.label :lebel, "レーベル名" %>
    <%= f.text_field :lebel %>
  </div>
  <div class="field">
    <%= f.label :genre, "ジャンル名" %>
    <%= f.text_field :genre %>
  </div>
  <div class="field">
    <%= f.label :item_price, "値段" %>
    <%= f.text_field :item_price %>
  </div>
  <div class="field">
    <%= f.label :stock, "在庫数" %>
    <%= f.text_field :stock %>
  </div>
  <h3>Disc</h3>
  <div id="discs">
    <%= f.fields_for :discs do |disc| %>
      <%= render 'disc_fields', f: disc %>
    <% end %>
    <div id="links">

      <%= link_to_add_association 'ディスクを追加',f, :discs %>
    </div>
    <%= f.submit %>
  </div>
<% end %>