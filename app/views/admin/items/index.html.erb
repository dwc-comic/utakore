<h1>登録商品一覧</h1>
<% @items.each do |item| %>
	<p><%= link_to admin_item_path(item.id) do %>
		<%= attachment_image_tag item, :image, :fill, 100, 100, format:'jpeg' %>
	<% end %></p>
	<p><%= item.title %></p>
	<p><%= item.artist_name %></p>
	<p><%= item.item_price %>円</p>
<% end %>
<%= paginate @items, class: "paginate" %>
