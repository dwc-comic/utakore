<div class="nested-fields well well-compact">
  <div class="form-group">
    <%= f.label :CD番号 %>
    <%= f.text_field :disc_number %><br>
    <%= link_to_remove_association "ディスク取消", f %>
  </div>

  <div class="items">
    <%= f.fields_for :songs do |song| %>
      <%= render 'song_fields', f: song %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "曲追加", f, :songs %>
    </div>
  </div>
</div>
